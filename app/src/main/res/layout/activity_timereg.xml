<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yyghbak"
    android:focusableInTouchMode="false">

    <com.ppfuns.jxyyzl.view.DateView
        android:layout_width="215px"
        android:layout_height="80px"
        android:layout_marginLeft="1005px"
        android:layout_marginTop="28px"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="right"
        android:textColor="#FFFFFF"
        android:textSize="24px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="334px"
        android:layout_marginTop="125px"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="left|center">

        <ImageView
            android:layout_width="33px"
            android:layout_height="33px"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:src="@drawable/num1n" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="选择医院"
            android:textColor="@color/colorText2"
            android:textSize="28px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="536px"
        android:layout_marginTop="125px"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="left|center">

        <ImageView
            android:layout_width="33px"
            android:layout_height="33px"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:src="@drawable/num2n" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="选择科室和日期"
            android:textColor="@color/colorText2"
            android:textSize="28px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="835px"
        android:layout_marginTop="125px"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="left|center">

        <ImageView
            android:layout_width="33px"
            android:layout_height="33px"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:src="@drawable/num3n" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="选择医生"
            android:textColor="@color/colorText2"
            android:textSize="28px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1038px"
        android:layout_marginTop="125px"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="left|center">

        <ImageView
            android:layout_width="33px"
            android:layout_height="33px"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:src="@drawable/num4y" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="选择时间"
            android:textColor="@color/colorText1"
            android:textSize="28px" />
    </LinearLayout>

    <com.ppfuns.jxyyzl.view.ListViewTv
        android:id="@+id/yygh_lv01"
        android:layout_width="218px"
        android:layout_height="488px"
        android:layout_marginLeft="64px"
        android:layout_marginTop="190px"
        android:divider="#00000000"
        android:dividerHeight="0dip"
        android:listSelector="@drawable/list_focus"
        android:scrollbars="vertical" />

    <android.support.v17.leanback.widget.VerticalGridView
        android:id="@+id/jzrgladd_fl01"
        android:layout_width="900px"
        android:layout_height="488px"
        android:layout_marginLeft="305px"
        android:layout_marginTop="190px" />

</RelativeLayout>
