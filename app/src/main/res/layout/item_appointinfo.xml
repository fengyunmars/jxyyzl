<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="230px"
    android:layout_margin="2px"
    android:gravity="center"
    android:minHeight="230px"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/iod_ll01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/iod_ll02"
        android:background="@drawable/itemfocus"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58px"
            android:orientation="horizontal"
            android:paddingLeft="36px"
            android:weightSum="4">

            <TextView
                android:id="@+id/iod_tv01"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="bottom"
                android:textColor="@color/colorText1"
                android:textSize="36px" />

            <TextView
                android:id="@+id/iod_tv02"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center"
                android:paddingRight="30px"
                android:textColor="@color/colorText1"
                android:textSize="24px" />
        </LinearLayout>

        <TextView
            android:id="@+id/iod_tv03"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="40px"
            android:paddingTop="3px"
            android:textColor="@color/colorText1"
            android:textSize="20px" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/iod_ll02"
        android:layout_width="200px"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/itemfocus"
        android:gravity="center">

        <TextView
            android:id="@+id/iod_tv04"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/colorText1"
            android:textSize="36px" />
    </LinearLayout>

</RelativeLayout>
